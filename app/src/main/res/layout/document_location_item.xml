<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/document.location.item.container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/document.location.item.delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete"/>

    <TextView
        android:id="@+id/document.location.item.name"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:singleLine="true"
        tools:text="Title"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/document.location.item.art.nr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        tools:text="Art. Nr."
        android:textSize="18sp"
        android:layout_below="@id/document.location.item.name"
        />


</RelativeLayout>