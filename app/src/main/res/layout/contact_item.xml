<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    >

  <TextView
      android:id="@+id/contact.item.name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      app:layout_widthPercent="40%"
      android:lines="2"
      tools:text="Nigel Heylen"
      android:layout_marginBottom="8dp"
      />

  <TextView
      android:id="@+id/contact.item.profession"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/contact.item.name"
      app:layout_widthPercent="40%"
      android:layout_marginBottom="5dp"
      android:drawableLeft="@drawable/ic_work"
      android:gravity="center_vertical"
      android:maxLines="1"
      android:ellipsize="end"
      android:textSize="12sp"
      tools:text="Architect"
      />

  <TextView
      android:id="@+id/contact.item.company"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableLeft="@drawable/ic_location"
      android:gravity="center_vertical"
      android:layout_below="@id/contact.item.profession"
      android:layout_toRightOf="@id/contact.item.name"
      app:layout_widthPercent="40%"
      android:maxLines="1"
      android:ellipsize="end"
      android:textSize="12sp"
      tools:text="Thuis"
      />

    <ImageView
        android:id="@+id/contact.item.follow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_person_add"
        />

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_below="@+id/contact.item.name"
      android:background="@android:color/darker_gray"
      />
</android.support.percent.PercentRelativeLayout>