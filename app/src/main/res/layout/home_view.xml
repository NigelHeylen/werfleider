<?xml version="1.0" encoding="utf-8"?>
<nigel.com.werfleider.ui.home.HomeView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home.welcome.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        tools:text="Wdup Niggie"/>

    <ImageView
        android:id="@+id/home.welcome.log.out"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_cancel"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_below="@id/home.welcome.text"
        style="@style/Werfoverzicht.Item.Row">

        <View style="@style/Werfoverzicht.Vertical.Separator"/>

        <android.support.v7.widget.CardView
            style="@style/Werfoverzicht.Item.Container">

            <RelativeLayout
                android:id="@+id/Home.Button.Contacts"
                style="@style/Werfoverzicht.Item.Button">

                <ImageView
                    style="@style/Werfoverzicht.Item.Icon"
                    android:src="@drawable/ic_contacts"
                    />

                <TextView
                    style="@style/Werfoverzicht.Item.Title"
                    android:text="Contacten"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <View style="@style/Werfoverzicht.Vertical.Separator"/>

        <android.support.v7.widget.CardView
            style="@style/Werfoverzicht.Item.Container">

            <RelativeLayout
                android:id="@+id/Home.Button.Werf"
                style="@style/Werfoverzicht.Item.Button">

                <ImageView
                    style="@style/Werfoverzicht.Item.Icon"
                    android:src="@drawable/ic_home"
                    />

                <TextView
                    style="@style/Werfoverzicht.Item.Title"
                    android:text="Werven"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <View style="@style/Werfoverzicht.Vertical.Separator"/>
    </LinearLayout>


</nigel.com.werfleider.ui.home.HomeView>