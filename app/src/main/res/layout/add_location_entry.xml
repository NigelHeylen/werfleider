<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="6dp"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/location_index"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:textColor="@android:color/black"
      android:layout_marginTop="8dp"
      tools:text="50"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="2dp"
      android:gravity="right"
      android:layout_height="wrap_content"/>

  <EditText
      style="@style/Werf.Create.EditText"
      android:layout_toRightOf="@+id/location_index"
      android:hint="Naam"
      android:id="@+id/location_text"/>

  <ImageView
      android:id="@+id/location_add"
      app:srcCompat="@drawable/plus_box"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:layout_below="@+id/location_text"
      android:layout_alignParentRight="true"
      android:layout_width="36dp" android:layout_height="36dp"/>

  <TextView
      android:padding="4dp"
      android:layout_toLeftOf="@+id/location_add"
      android:layout_below="@+id/location_text"
      android:id="@+id/locations_number_sub_locations"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      tools:text="5 locaties"
      android:textAppearance="?android:textAppearanceMedium"/>

</RelativeLayout>