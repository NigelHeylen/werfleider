<?xml version="1.0" encoding="utf-8"?>
<nigel.com.werfleider.ui.document.ParsePictureGridView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/picture.grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/picture.grid.save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:fab_colorNormal="@color/accent"
        app:fab_icon="@drawable/ic_save"
        app:fab_title="Save locatie"/>


    <com.gc.materialdesign.views.ProgressBarCircularIndeterminate
        android:id="@+id/picture.grid.progress"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:background="#1E88E5" />

</nigel.com.werfleider.ui.document.ParsePictureGridView>