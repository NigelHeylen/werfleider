<?xml version="1.0" encoding="utf-8"?>
<nigel.com.werfleider.ui.document.LocationDetailInfoView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/document.location.detail.info.container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <ScrollView android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <RelativeLayout android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:id="@+id/document.detail.floor.label"
            android:text="Verdieping: "
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="100dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/document.detail.floor"
            android:layout_toRightOf="@+id/document.detail.floor.label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Verdieping"
            android:inputType="textShortMessage"/>
      </RelativeLayout>


      <RelativeLayout android:layout_width="match_parent"
          android:layout_height="wrap_content">

      <TextView
          android:id="@+id/document.detail.location.label"
          android:text="Locatie: "
          android:textAppearance="?android:textAppearanceMedium"
          android:layout_width="100dp"
          android:layout_centerVertical="true"
          android:layout_height="wrap_content"/>
      <Spinner
          android:id="@+id/document.detail.location"
          android:layout_toRightOf="@+id/document.detail.location.label"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minWidth="100dp"
          android:layout_marginTop="20dp"
          android:hint="Locatie"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:inputType="textShortMessage"/>
      </RelativeLayout>

    </LinearLayout>
  </ScrollView>


</nigel.com.werfleider.ui.document.LocationDetailInfoView>