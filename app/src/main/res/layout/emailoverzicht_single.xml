<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/emailoverzicht.single.container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/emailoverzicht.single.from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/emailoverzicht.single.date"
        tools:text="Niggie"/>

    <TextView
        android:id="@+id/emailoverzicht.single.date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="24 Mar"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/emailoverzicht.single.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Morgen niet op kantoor"
        android:layout_below="@+id/emailoverzicht.single.from"/>

    <TextView
        android:id="@+id/emailoverzicht.single.snippet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Wegens omstandigheden kan ik morgen niet op kantoor zijn. Als er iets call me blabliebloe."
        android:layout_below="@+id/emailoverzicht.single.title"/>

    <View xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="10dp"
          android:layout_below="@id/emailoverzicht.single.snippet"
          android:background="@color/material_blue_grey_800"/>
</RelativeLayout>