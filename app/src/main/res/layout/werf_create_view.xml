<?xml version="1.0" encoding="utf-8"?>
<nigel.com.werfleider.ui.werf.WerfCreateView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="72dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.naam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Werf naam"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="34sp"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/accent"
                app:met_singleLineEllipsis="true"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.nummer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Werf nummer"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                app:met_baseColor="@android:color/white"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/accent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.opdracht.stad"
                android:hint="Werf postcode + stad"
                style="@style/Werf.Create.EditText"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.opdracht.adres"
                android:hint="Werf adres"
                style="@style/Werf.Create.EditText"/>

            <include layout="@layout/divider_werf_create"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.ontwerper"
                style="@style/Werf.Create.EditText"
                android:hint="Ontwerper naam"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.ontwerper.stad"
                style="@style/Werf.Create.EditText"
                android:hint="Ontwerper postcode + stad"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.ontwerper.adres"
                style="@style/Werf.Create.EditText"
                android:hint="Ontwerper adres"
                />

            <include layout="@layout/divider_werf_create"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.opdrachtgever"
                style="@style/Werf.Create.EditText"
                android:hint="Opdrachtgever naam"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.opdrachtgever.stad"
                android:hint="Opdrachtgever postcode + stad"
                style="@style/Werf.Create.EditText"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.opdrachtgever.adres"
                android:hint="Opdrachtgever adres"
                style="@style/Werf.Create.EditText"/>

            <include layout="@layout/divider_werf_create"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Datum aanvang van werken"
                android:textColor="#888888"
                android:textSize="14sp"/>

            <DatePicker
                android:id="@+id/werf.create.datum.aanvang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/werf.create.omschrijving"
                android:hint="Omschrijving van de werken"
                style="@style/Werf.Create.EditText"/>


            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/werf.create.save"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:text="@string/tSave"/>
        </LinearLayout>
    </LinearLayout>


</nigel.com.werfleider.ui.werf.WerfCreateView>