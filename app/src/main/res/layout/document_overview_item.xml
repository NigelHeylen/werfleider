<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/document.overview.item.container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/document.overview.item.image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            tools:background="@color/teal"/>

        <TextView
            android:id="@+id/document.overview.item.date"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/document.overview.item.image"
            android:gravity="center"
            android:textSize="20sp"
            tools:text="24-03-1989"/>

        <ImageView
            android:id="@+id/document.overview.item.delete"
            android:src="@drawable/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>