<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/document.overview.item.container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen.margin"
        android:padding="4dp">


        <TextView
            android:id="@+id/document.overview.item.name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/document.overview.item.edit"
            android:textSize="20sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            tools:text="Kelder"/>
        <TextView
            android:id="@+id/document.overview.item.date"
            android:layout_below="@id/document.overview.item.name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/document.overview.item.edit"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            tools:text="24-03-1989"/>


        <ImageView
            android:id="@+id/document.overview.item.delete"
            app:srcCompat="@drawable/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/document.overview.item.edit"
            app:srcCompat="@drawable/ic_edit"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@id/document.overview.item.delete"
            android:layout_marginRight="50dp"
            android:layout_width="40dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>