<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Werfoverzicht"/>

    <style name="Werfoverzicht.Vertical"/>

    <style name="Werfoverzicht.Vertical.Separator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">0.06</item>
    </style>

    <style name="Werfoverzicht.Item"/>

    <style name="Werfoverzicht.Item.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="Werfoverzicht.Item.Container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_weight">0.4</item>
    </style>

    <style name="Werfoverzicht.Item.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Werfoverzicht.Item.Icon">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Werfoverzicht.Item.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/icons</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>



</resources>